@{
    ViewBag.Title = "_banner";
}

<section class="banner-one p-r z-1">
    <div class="shape shape-one"><span><img src="~/Content/images/hero/hero-shape-1.png" alt="shape"></span></div>
    <div class="shape shape-two"><span><img src="~/Content/images/hero/hero-shape-2.png" alt="shape"></span></div>
    <div class="shape line-shape-one"><span><img src="~/Content/images/shape/line-1.png" alt="shape"></span></div>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 order-lg-1 order-2">
                <!--=== Hero Content ===-->
                <div class="hero-content mb-40 pr-lg-40">
                    <h1 class="wow fadeInUp" data-wow-delay=".5s">
                        Crispy
                        Chicken
                        Burgers
                    </h1>
                    <p class="wow fadeInDown" data-wow-delay=".7s">Crispy Chicken Burgers are a delicious sandwich made with a crispy and flavorful breaded chicken patty. Served on a soft bun and topped with fresh lettuce, juicy tomato, and creamy mayonnaise, these burgers are a satisfying meal that is both crispy and juicy. Perfect for a quick and easy lunch or dinner, Crispy Chicken Burgers are sure to be a crowd-pleaser.</p>
                    <div class="hero-button wow fadeInUp" data-wow-delay=".9s">
                        <span><img src="~/Content/images/down-arrow.png" alt=""></span>
                        <a href="products.html" class="main-btn btn-red">order now<i class="fa fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 order-lg-2 order-1">
                <!--=== Hero Image ===-->
                <div class="hero-image-box mb-40 wow fadeInRight" data-wow-delay=".7s">
                    <img src="~/Content/images/hero/hero-1.png" alt="Hero Image">
                </div>
            </div>
        </div>
    </div>
</section>