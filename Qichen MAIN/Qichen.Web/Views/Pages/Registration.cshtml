@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout_Reg_Log.cshtml";
}

<section class="h-100" >
    <div class="container h-100">
        <div class="row justify-content-sm-center h-100">
            <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                <div class="text-center my-5">
                </div>
                <div class="card shadow-lg">
                    <div class="card-body p-3">
                        <form>
                        <h1 class="fs-4 card-title fw-bold mb-4">Register</h1>
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">User Name:</label>
                            <input type="user" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" style="background-color:#FDF5F2;">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Email address:</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" style="background-color:#FDF5F2;">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Password:</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" style="background-color:#FDF5F2;">
                            <div id="emailHelp" class="form-text">We'll never share your pass with anyone else.</div>
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Confirm Password:</label>
                            <input type="password_re" class="form-control" id="exampleInputPassword1" style="background-color:#FDF5F2;">
                            <div id="emailHelp" class="form-text">Use only the keyboard.</div>
                        </div>

                        <div class="align-items-center d-flex">
                            <button type="submit" class="btn btn-primary ms-auto"> @Html.ActionLink("Register", "Index", "Pages") </button>
                        </div>
                        </form>
                    </div>
                    <div class="card-footer py-3 border-0">
                        <div class="text-center">
                            Already have an account? <a href="@Url.Action("Login","Pages")" class="text-dark">Login</a>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-5 text-muted">
                    Copyright &copy; 2023 &mdash; UTMFood
                </div>
            </div>
        </div>
    </div>
</section>
