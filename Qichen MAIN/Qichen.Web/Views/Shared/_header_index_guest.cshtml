
@{
    ViewBag.Title = "_header_index_guest";
}
<header class="header-area transparent-header">
    <div class="top-bar">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-7">
                    <span class="text">One Japanese plum a day is an escape from that one day struggle.</span>
                    <!-- Translation: Discomfort caused by struggle can be healed by just one piece of happiness. -->
                </div>
                <div class="col-lg-5">
                    <div class="top-right d-flex align-items-center justify-content-lg-end">
                        <span class="text"><i class="fa fa-envelope"></i>Subscribe & Get 10% Off</span>
                        <ul class="social-link">
                            <li><a href="https://www.facebook.com"><i class="fa fa-facebook-f"></i></a></li>
                            <li><a href="https://www.twitter.com"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="https://www.youtube.com"><i class="fa fa-youtube"></i></a></li>
                            <li><a href="https://www.instagram.com"><i class="fa fa-instagram"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--=== Header Navigation ===-->
    <div class="header-navigation navigation-one">
        <div class="nav-overlay"></div>
        <div class="container-fluid">
            <!--=== Primary Menu ===-->
            <div class="primary-menu">
                <!--=== Site Branding ===-->
                <div class="site-branding">
                    <a href="@Url.Action("Index", "Pages")" class="brand-logo"><img src="~/Content/images/logo/logo-white.png" alt="Site Logo"></a>
                </div>
                <!--=== Nav Inner Menu ===-->
                <div class="nav-inner-menu">
                    <div class="nav-menu">
                        
                        <!--=== Main Menu ===-->
                        <nav class="main-menu">
                            <ul>
                                <li class="menu-item">
                                    <a href="#">Menu</a>
                                    <ul class="sub-menu">
                                        <li>
                                            @Html.ActionLink("Menu Fastfood", "MenuFastFood", "Pages")
                                        </li>
                                        <li>
                                            @Html.ActionLink("Menu Seafood", "MenuSeaFood", "Pages")
                                        </li>
                                    </ul>
                                </li>
                                <li class="menu-item">
                                    @Html.ActionLink("About", "About", "Pages")
                                </li>
                                <li class="menu-item has-children">
                                    <a href="#">Shop</a>
                                    <ul class="sub-menu">
                                        <li>
                                            @Html.ActionLink("Our Products", "Products", "Pages")
                                        </li>
                                        <li>
                                            @Html.ActionLink("Shopping Cart", "Cart", "Pages")
                                        </li>
                                        <li>
                                            @Html.ActionLink("Checkout", "Checkout", "Pages")
                                        </li>
                                    </ul>
                                </li>
                                <li class="menu-item has-children">
                                    <a href="#">Pages</a>
                                    <ul class="sub-menu">
                                        <li>
                                            @Html.ActionLink("Our Gallery", "Gallery", "Pages")
                                        </li>
                                        <li>
                                            @Html.ActionLink("Our Chefs", "Chefs", "Pages")
                                        </li>
                                        <li>
                                            @Html.ActionLink("Reservations", "Reservations", "Pages")
                                        </li>
                                        <!--=== <li><a href="404.html">404</a></li>===-->
                                        <li>
                                            @Html.ActionLink("FAQ", "Faq", "Pages")
                                        </li>
                                        <li>
                                            @Html.ActionLink("Contact", "Contact", "Pages")
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </nav>
                        <!--=== Nav Button ===-->
                        <div class="menu-button mt-40 d-xl-none">
                            <a href="../Pages/Contact.cshtml" class="main-btn btn-red">Book a Table<i class="fa fa-long-arrow-right"></i></a>
                        </div>
                    </div>
                    <!--=== Nav right Item ===-->
                    <div class="nav-right-item d-flex align-items-center">
                        <div class="search-button">
                            <div class="search-btn" data-bs-toggle="modal" data-bs-target="#search-modal">
                                <i class="fa fa-search"></i>
                            </div>
                        </div>
                        <!-- Кнопка-триггер модального окна -->
                        <button type="button" class="main-btn btn-red">
                            @Html.ActionLink("Registration", "Registration", "Pages")
                        </button>

                        <div class="menu-button  d-xl-block d-none">
                            <button type="button" class="main-btn btn-red">
                                @Html.ActionLink("Login", "Login", "Pages")
                            </button>
                        </div>
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>

</header>